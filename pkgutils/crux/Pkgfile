name=pkgutils
version=c-1.1
release=1
source=($name-$version.tar.bz2
	http://people.freebsd.org/~kientzle/libarchive/src/libarchive-1.3.1.tar.gz
	config.cache
)

build() {
	(
		cd libarchive-1.3.1
		cp $SRC/config.cache .
		./configure            \
			--config-cache \
			--prefix=/usr
		make
		make DESTDIR=$PKG install
	)

	cd $name-$version
	make LIBARCHIVE_CFLAGS="-I$PKG/usr/include"             \
	     LIBARCHIVE_LDFLAGS="-L$PKG/usr/lib/ -larchive -lz"
	rm -rf $PKG/usr
	make install DESTDIR=$PKG PREFIX=/usr

	mv $PKG/usr/bin/pkgutils $PKG/usr/bin/pkgadd
	ln -sf pkgadd $PKG/usr/bin/pkgrm
	ln -sf pkgadd $PKG/usr/bin/pkginfo
}
